<div class="messages">
    {% for m in messages %}
        <div class="message {% if m.sender == app.user %}sent{% else %}received{% endif %}">
            <p class="content">{{ m.content }}</p>
            <small class="date">{{ m.sentAt|date('H:i d/m/Y') }}</small>
        </div>
    {% else %}
        <p class="no-message">Aucun message pour lâ€™instant.</p>
    {% endfor %}
</div>
