{% extends 'base.html.twig' %}

{% block body %}
<a href="{{ path('favorites_add', {id: post.id}) }}" class="btn btn-warning">‚≠ê Ajouter aux favoris</a>
<a href="{{ path('report_post', {id: post.id}) }}" class="btn btn-danger">
    üö© Signaler cette annonce
</a>
{% if app.user and app.user != post.user %}
    <a href="{{ path('message_contact', {id: post.id}) }}" class="btn btn-primary">
        ‚úâÔ∏è Envoyer un message
    </a>
{% endif %}
<h1>{{ post.title }}</h1>

<p>{{ post.description }}</p>
<p><strong>Prix :</strong> {{ post.price }} ‚Ç¨</p>
<p><strong>Lieu :</strong> {{ post.location }}</p>
<p><strong>Cat√©gorie :</strong> {{ post.category.name }}</p>
<p><strong>Publi√© par :</strong> {{ post.user.name }}</p>
<p><strong>Date :</strong> {{ post.publishedAt|date('d/m/Y H:i') }}</p>

{# Images #}
<div>
  {% if post.image1 %}
    <img src="{{ asset('uploads/' ~ post.image1) }}" width="300">
  {% endif %}
  {% if post.image2 %}
    <img src="{{ asset('uploads/' ~ post.image2) }}" width="300">
  {% endif %}
  {% if post.image3 %}
    <img src="{{ asset('uploads/' ~ post.image3) }}" width="300">
  {% endif %}
</div>

{% if app.user and (app.user == post.user or 'ROLE_ADMIN' in app.user.roles) %}
    <a href="{{ path('post_edit', {id: post.id}) }}">Modifier l‚Äôannonce</a>
{% endif %}

{% endblock %}
