{% extends 'base.html.twig' %}

{% block body %}
<h1>{{ post.title }}</h1>

<p>{{ post.description }}</p>
<p><strong>Prix :</strong> {{ post.price }} €</p>
<p><strong>Lieu :</strong> {{ post.location }}</p>
<p><strong>Catégorie :</strong> {{ post.category.name }}</p>
<p><strong>Publié par :</strong> {{ post.user.name }}</p>
<p><strong>Date :</strong> {{ post.publishedAt|date('d/m/Y H:i') }}</p>

{# Images #}
<div>
  {% if post.image1 %}
    <img src="{{ asset('uploads/' ~ post.image1) }}" width="300">
  {% endif %}
  {% if post.image2 %}
    <img src="{{ asset('uploads/' ~ post.image2) }}" width="300">
  {% endif %}
  {% if post.image3 %}
    <img src="{{ asset('uploads/' ~ post.image3) }}" width="300">
  {% endif %}
</div>

{% if app.user and (app.user == post.user or 'ROLE_ADMIN' in app.user.roles) %}
    <a href="{{ path('post_edit', {id: post.id}) }}">Modifier l’annonce</a>
{% endif %}

{% endblock %}
