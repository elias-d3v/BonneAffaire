{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
<section class="page-banner">
    <h1>Créer un compte</h1>
</section>

<div class="form-container">
    {{ form_start(registrationForm, {'attr': {'class': 'custom-form'}}) }}

      <div class="form-group">
        {{ form_label(registrationForm.name, 'Nom complet', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.name, {'attr': {'class': 'form-error'}}) }}
      </div>

      <div class="form-group">
        {{ form_label(registrationForm.phone, 'Téléphone', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.phone, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.phone, {'attr': {'class': 'form-error'}}) }}
      </div>

      <div class="form-group">
        {{ form_label(registrationForm.email, 'Adresse email', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.email, {'attr': {'class': 'form-error'}}) }}
      </div>

      <div class="form-group">
        {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'form-error'}}) }}
      </div>

      <div class="form-group checkbox-group">
        {{ form_widget(registrationForm.agreeTerms) }}
        {{ form_label(registrationForm.agreeTerms, 'J’accepte les conditions générales') }}
        {{ form_errors(registrationForm.agreeTerms, {'attr': {'class': 'form-error'}}) }}
      </div>

      <button type="submit" class="btn-submit">S’inscrire</button>

      <p class="form-alt-text">
        Déjà un compte ?
        <a href="{{ path('app_login') }}">Se connecter</a>
      </p>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
